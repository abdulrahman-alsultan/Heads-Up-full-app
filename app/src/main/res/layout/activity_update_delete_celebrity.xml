<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateDeleteCelebrity">

    <EditText
        android:id="@+id/ed_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/ed_taboo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Taboo 1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ed_name"/>

    <EditText
        android:id="@+id/ed_taboo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Taboo 2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ed_taboo1" />

    <EditText
        android:id="@+id/ed_taboo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Taboo 3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ed_taboo2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/ed_taboo3"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btn_delete_celebrity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="delete celebrity"/>
        <Button
            android:id="@+id/btn_update_celebrity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="update celebrity"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>